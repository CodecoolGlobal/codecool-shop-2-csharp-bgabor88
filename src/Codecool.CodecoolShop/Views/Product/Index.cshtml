@{
    ViewData["Title"] = "Home Page";
}

@model List<Codecool.CodecoolShop.Models.Product>

<div class="d-flex flex-row justify-content-center">

    <label class="p-2" for="brand"></label>
    <select name="brand" id="brand">
        <option selected value="All">Choose a brand</option>
        <option>Canon</option>
        <option>Nikon</option>
        <option>Sony</option>
    </select>

    <label class="p-2" for="category"></label>
    <select name="category" id="category">
        <option selected value="All">Choose a category</option>
        <option>Lens</option>
        <option>Body</option>
    </select>
</div>

<div id="products">
    @Html.Partial("_products")
</div>

@section Scripts {
    <script src="~/js/products.js" asp-append-version="true" defer></script>
}